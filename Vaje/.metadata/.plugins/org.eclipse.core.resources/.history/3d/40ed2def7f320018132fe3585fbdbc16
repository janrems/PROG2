import java.util.HashSet;
import java.util.Set;

public class Tocka {
	protected Object ime;
	protected Set<Tocka> sosedi;
	protected double x;
	protected double y;
	
	
	public Tocka(Object ime) {
		super();
		this.ime = ime;
		this.sosedi = new HashSet<Tocka>();
		this.x = 0;
		this.y = 0;
	}
	
	public int stopnja(){
		return sosedi.size(); //lahko tudi this.sosedi.size()
	}
	
}


